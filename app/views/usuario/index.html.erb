<%- model_class = Usuario -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:First) %></th>
      <th><%= model_class.human_attribute_name(:Name) %></th>
      <th><%= model_class.human_attribute_name(:Last) %></th>
      <th><%= model_class.human_attribute_name(:Email) %></th>
      <th><%= model_class.human_attribute_name(:CPF) %></th>
      <th><%= model_class.human_attribute_name(:Telefone) %></th>
      <th><%= model_class.human_attribute_name(:CEP) %></th>
      <th><%= model_class.human_attribute_name(:RuaAv) %></th>
      <th><%= model_class.human_attribute_name(:Numero) %></th>
      <th><%= model_class.human_attribute_name(:Complemento) %></th>
      <th><%= model_class.human_attribute_name(:Bairro) %></th>
      <th><%= model_class.human_attribute_name(:Cidade) %></th>
      <th><%= model_class.human_attribute_name(:UF) %></th>
      <th><%= model_class.human_attribute_name(:Pais) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @usuarios.each do |usuario| %>
      <tr>
        <td><%= link_to usuario.id, usuario_path(usuario) %></td>
        <td><%= usuario.First %></td>
        <td><%= usuario.Name %></td>
        <td><%= usuario.Last %></td>
        <td><%= usuario.Email %></td>
        <td><%= usuario.CPF %></td>
        <td><%= usuario.Telefone %></td>
        <td><%= usuario.CEP %></td>
        <td><%= usuario.RuaAv %></td>
        <td><%= usuario.Numero %></td>
        <td><%= usuario.Complemento %></td>
        <td><%= usuario.Bairro %></td>
        <td><%= usuario.Cidade %></td>
        <td><%= usuario.UF %></td>
        <td><%= usuario.Pais %></td>
        <td><%=l usuario.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_usuario_path(usuario), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      usuario_path(usuario),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_usuario_path,
            :class => 'btn btn-primary' %>
